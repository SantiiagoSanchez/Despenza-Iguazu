@page "/api/Producto"
@inject IHttpServicio http
<h3 style="text-align:center">Lista de productos</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Unidad</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoria</th>

        </tr>
    </thead>
    <tbody>

        @if (listaProducto == null)
        {
           <p>Buscando productos ...</p>
        }
        @foreach (var item in listaProducto)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Marca?.Nombre</td>
                <td>@item.Unidad?.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.Stock</td>
                <td>@item.Categoria?.Nombre</td>
                <td>
                    <a class="btn btn-success" href="api/Producto/Editar/@item.Id">Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
@code {
    List<Producto> listaProducto = new List<Producto>();
    string Mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Producto>>("api/Producto");

        if(!resp.Error)
        {
            listaProducto = resp.Respuesta;
        }
        else
        {
            Mensaje = "Error";
        }
    }
}
